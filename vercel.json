{
    "version": 2,
    "builds": [
        { "src": "public/**", "use": "@vercel/static" },
        { "src": "server/index.js", "use": "@vercel/node" },
        { "src": "src/**", "use": "@vercel/static" }
    ],
    "routes": [
        { "src": "/api/(.*)", "dest": "/server/index.js" },
        { "src": "/(.*)", "dest": "/public/index.html" }
    ]
}
  